extends ../../templates/common.pug
block content
	h1 Create User
	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="/user/create", method="POST", enctype="multipart/form-data")
		.form-group
			label(for="txtName") Name
			input.form-control(id="txtName", type="text", name="name", value=user ? user.name : "")
		.form-group
			label(for="txtPhone") Phone number
			input.form-control(id="txtPhone", type="text", name="phone", value=user ? user.phone : "")
		.form-group
			label(for="avtar") Avatar
			input.form-control-file(type="file", name="avatar")
		button.btn.btn-primary Create
